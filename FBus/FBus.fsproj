<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="FBus.fs" />
    <Compile Include="Containers.fs" />
    <Compile Include="Serializers.fs" />
    <Compile Include="Transports.fs" />
    <Compile Include="Control.fs" />
    <Compile Include="Builder.fs" />
    <Compile Include="InMemory.fs" />
    <Compile Include="Testing.fs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <PropertyGroup>
    <!-- https://docs.microsoft.com/en-us/nuget/reference/msbuild-targets#packing-using-a-nuspec -->
    <PackageId>FBus</PackageId>
    <Authors>Pierre Chalamet</Authors>
    <Title>FBus</Title>
    <Description>FBus - a lightweight service-bus implementation written in F#.</Description>
    <Copyright>Copyright 2020 Pierre Chalamet</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/pchalamet/fbus</PackageProjectUrl>
    <RepositoryUrl>https://github.com/pchalamet/fbus.git</RepositoryUrl>
    <PackageTags>service;bus;service-bus</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

</Project>
